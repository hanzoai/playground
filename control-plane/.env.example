# Playground Server Environment Variables
# Copy this file to .env and modify values as needed

# Core Playground Configuration
AGENTS_PORT=8080
AGENTS_MODE=local
AGENTS_CONFIG_FILE=./config/agents.yaml

# Database Configuration (for local mode)
AGENTS_STORAGE_LOCAL_DATABASE_PATH=./playground_local.db
AGENTS_STORAGE_LOCAL_KV_STORE_PATH=./playground_local.bolt

# UI Configuration
AGENTS_UI_ENABLED=true
AGENTS_UI_MODE=embedded
AGENTS_UI_SOURCE_PATH=./web/client
AGENTS_UI_DIST_PATH=./web/client/dist
AGENTS_UI_DEV_PORT=5173

# API Configuration
AGENTS_API_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
AGENTS_API_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
AGENTS_API_CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization,X-Requested-With
AGENTS_API_CORS_EXPOSED_HEADERS=Content-Length,X-Total-Count
AGENTS_API_CORS_ALLOW_CREDENTIALS=true

# Cloud Configuration (if using cloud mode)
# AGENTS_CLOUD_ENABLED=false
# AGENTS_CLOUD_API_KEY=your-api-key-here

# Storage Configuration
AGENTS_STORAGE_MODE=local

# PostgreSQL Storage Configuration (when AGENTS_STORAGE_MODE=postgresql)
# AGENTS_STORAGE_POSTGRES_URL=postgresql://user:password@localhost:5432/playground?sslmode=disable
# AGENTS_STORAGE_POSTGRES_MAX_CONNECTIONS=25
# AGENTS_STORAGE_POSTGRES_MAX_IDLE_CONNECTIONS=5
# AGENTS_STORAGE_POSTGRES_CONNECTION_TIMEOUT=30s
# AGENTS_STORAGE_POSTGRES_QUERY_TIMEOUT=30s
# AGENTS_STORAGE_POSTGRES_ENABLE_MEMORY_FALLBACK=true
# AGENTS_STORAGE_POSTGRES_ENABLE_DID_FALLBACK=true
# AGENTS_STORAGE_POSTGRES_ENABLE_VC_FALLBACK=true
# AGENTS_STORAGE_POSTGRES_ENABLE_AUTO_MIGRATION=true

# Cloud Storage Configuration (when AGENTS_STORAGE_MODE=cloud)
# AGENTS_STORAGE_CLOUD_POSTGRES_URL=postgresql://user:password@localhost:5432/playground
# AGENTS_STORAGE_CLOUD_MAX_CONNECTIONS=50
# AGENTS_STORAGE_CLOUD_CONNECTION_POOL=true
# AGENTS_STORAGE_CLOUD_REPLICATION_MODE=async

# Development/Debug
# GIN_MODE=debug
# LOG_LEVEL=info
