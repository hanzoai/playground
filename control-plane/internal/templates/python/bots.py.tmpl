from playground import AgentRouter
from pydantic import BaseModel, Field

# Group related bots with a router
bots_router = AgentRouter(prefix="demo", tags=["example"])


@bots_router.bot()
async def echo(message: str) -> dict:
    """
    Simple echo bot - works without AI configured.

    Example usage:
    curl -X POST http://localhost:8080/api/v1/execute/{{.NodeID}}.demo_echo \
      -H "Content-Type: application/json" \
      -d '{"input": {"message": "Hello World"}}'
    """
    return {
        "original": message,
        "echoed": message,
        "length": len(message)
    }


