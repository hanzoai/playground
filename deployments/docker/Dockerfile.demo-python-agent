FROM python:3.14-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

# Install the local Playground Python SDK (from this repo) + deps.
COPY sdk/python /tmp/python-sdk
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir /tmp/python-sdk && \
    rm -rf /tmp/python-sdk

# Copy the demo bot source.
COPY examples/python_bots/docker_hello_world /app

EXPOSE 8001
CMD ["python", "main.py"]

