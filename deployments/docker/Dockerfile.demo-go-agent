FROM --platform=$BUILDPLATFORM golang:1.24-alpine AS builder
WORKDIR /workspace

COPY sdk/go ./sdk/go
COPY examples/go_bots ./examples/go_bots

RUN --mount=type=cache,target=/root/.cache/go-build --mount=type=cache,target=/go/pkg/mod \
    cd examples/go_bots && go mod download && \
    CGO_ENABLED=0 go build -o /out/playground-demo-go-bot ./main.go

FROM gcr.io/distroless/static-debian12:nonroot
COPY --from=builder /out/playground-demo-go-bot /usr/local/bin/playground-demo-go-bot
EXPOSE 8001
ENTRYPOINT ["/usr/local/bin/playground-demo-go-bot"]

